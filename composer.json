{
    "name": "php-collective/file-storage-factories",
    "type": "library",
    "description": "This library is a factory to instantiate storage adapters based on the Flysystem library.",
    "keywords": [
        "file",
        "filesystem",
        "media",
        "abstraction",
        "storage",
        "s3",
        "dropbox",
        "ftp",
        "sftp",
        "file"
    ],
    "homepage": "https://github.com/burzum/storage-factory",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian KrÃ¤mer",
            "homepage": "https://florian-kraemer.net"
        },
        {
            "name": "Mark Scherer",
            "role": "Maintainer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "league/flysystem": "^3.22",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "php-collective/code-sniffer": "^0.2.1",
        "instituteweb/composer-scripts": "^1.1",
        "league/flysystem-aws-s3-v3": "^3.22",
        "league/flysystem-azure-blob-storage": "^3.22",
        "league/flysystem-memory": "^3.0",
        "league/flysystem-sftp": "^3.22",
        "league/flysystem-webdav": "^3.21",
        "league/flysystem-ziparchive": "^3.21",
        "spatie/flysystem-dropbox": "^3.0.1"
    },
    "autoload": {
        "psr-4": {
            "PhpCollective\\Infrastructure\\Storage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpCollective\\Storage\\Test\\": "tests/"
        }
    },
    "scripts": {
            "post-install-cmd": [
                    "php config/composer_post_install.php"
            ],
            "test": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpunit"
            ],
            "test-coverage": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpunit --coverage-text"
            ],
            "test-coverage-html": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpunit --coverage-html ./tmp/coverage"
            ],
            "cs-check": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpcs -s"
            ],
            "cs-fix": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpcbf"
            ],
            "stan": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "phpstan analyze"
            ],
            "serve": [
                    "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
                    "php -S localhost:8081 -t ./public"
            ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
